<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liucan.loda.UserMapper">
    <!-- 根据id获取用户信息 -->
    <select id="findUserById" parameterType="java.lang.Integer"
            resultType="com.liucan.loda.User">
        select user_id as userId, user_name as userName
        from user
        where user_id = #{id}
    </select>

    <!-- 根据名称模糊查询用户列表 -->
    <select id="findUserByUsername" parameterType="int"
            resultType="user">
        select user_id as userId, user_name as userName
        from user
        where user_name like '%${value}%'
    </select>
</mapper>